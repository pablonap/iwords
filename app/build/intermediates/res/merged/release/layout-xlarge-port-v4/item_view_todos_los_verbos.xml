<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#FAFAC5"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation ="horizontal"
        android:layout_gravity="center"
        android:foregroundGravity="center_horizontal"
        >

        <TextView
            android:id="@+id/textViewVerboEnEspLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/esp"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/textViewVerboEnEsp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:text="surgir/levantarse"
            />

        <TextView
            android:id="@+id/textViewVerboEnIngLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ing"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation ="vertical"
            >
            <TextView
                android:id="@+id/textViewVerboEnIngCol1"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="overcome"
                android:textSize="25dp"
                />
            <TextView
                android:id="@+id/textViewVerboEnIngCol2"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="overcame"
                android:textSize="25dp"
                />
            <TextView
                android:id="@+id/textViewVerboEnIngCol3"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="overcome"
                android:textSize="25dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewVerboIrregVoice"
            android:foreground="@mipmap/ic_sound_verb"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/imageViewStar"
            android:foreground="@mipmap/ic_void_star"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
</LinearLayout>