<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/amarilloDefault"
        >

        <TextView
            android:id="@+id/textViewPalabraEnEsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:text="@string/palabraEnEsp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"

            />

        <EditText
            android:id="@+id/editTextPalabraEnEsp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:maxHeight="30dp"
            android:layout_marginLeft="3dp"
            android:inputType="textPersonName"
            android:textStyle="bold"
            android:padding="2dp"
            android:ems="4"
            android:background="@drawable/spanish_flag"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:maxLength="45"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/celestOscuroStartBackground"
        >

        <TextView
            android:id="@+id/textViewPalabraEnIng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="#fff"
            android:text="@string/palabraEnIng"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"

            />

        <EditText
            android:id="@+id/editTextPalabraEnIng"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:maxHeight="30dp"
            android:layout_marginLeft="7dp"
            android:inputType="textPersonName"
            android:padding="2dp"
            android:ems="4"
            android:textColor="#000"
            android:textStyle="bold"
            android:background="@drawable/british_flag"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:maxLength="45"

            />
    </LinearLayout>
</LinearLayout>