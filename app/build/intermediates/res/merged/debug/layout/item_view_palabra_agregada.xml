<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#FAFAC5"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation ="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/textViewPalabraEnEspLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/esp"
            android:textSize="12dp"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/textViewPalabraEnEsp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="estoy en camino"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:id="@+id/textViewPalabraEnIngLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/ing"
            android:textSize="12dp"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/textViewPalabraEnIng"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="jdsfjdsfdsjfndsjfndsjfds"
            android:layout_marginLeft="3dp"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/imageViewPalabraVoice"
            android:foreground="@mipmap/ic_sound_verb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            />

        <ImageView
            android:id="@+id/imageViewStarPalabraAg"
            android:foreground="@mipmap/ic_void_star"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
</LinearLayout>